mixin resourceHubResourceCard(resourceName, cardImgUrl, authorUsername, rating)
	.card
		header.card-header
			p.card-header-title= resourceName
		.card-image
			figure.image.is-4by3
				img.resourceCardCoverImage(src=cardImgUrl)
		.card-content
			.columns
				//- .column.is-one-quarter
				//- 	figure.image.is-48x48
				//- 		img(src=authorProfilePicUrl)
				.column
					span By #{authorUsername}
					p
						- for (var x = 0; x < rating; x++)
							span.fa.fa-star.star-checked
						- for (var x = rating; x < 5; x++)
							span.fa.fa-star
			.content
				block
		footer.card-footer.has-text-centered
			a.card-footer-item.openQuickviewPanel(data-show="quickview", data-target="quickviewDefault") View details
			a.card-footer-item.openInInnovationBoardButton Open in Innovation Board
