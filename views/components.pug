		header.card-header
			p.card-header-title= teacherName
		.card-content
			.level: .level-item.has-text-centered
				figure.image.is-96x96
					img(src=teacherProfilePicUrl)
			span: strong= teacherSchool
			br
			span= teacherDepartment
			br
			span= teacherSubject
			.content
				block
		footer.card-footer.has-text-centered
