mixin dropdown(link)
	.navbar-item.has-dropdown.is-hoverable
		a.navbar-link= link
		.navbar-dropdown
			block

//- box-shadow: 0px 3px 6px #888888;
nav.navbar(style="width: 100%; position: fixed; z-index: 100;")
	.navbar-brand
		a.navbar-item(href="/index.html")
			img(src="/img/logo.png")
			//- span Template
		a.navbar-burger(data-target="navMenu")
			- for (var x = 0; x < 3; x++)
				span
	#navMenu.navbar-menu
		.navbar-start
			a.navbar-item(href="resource-hub.html") Resource Library
			a.navbar-item(href="creative-spaces.html") Creative Spaces
			a.navbar-item(href="teacher-match.html") Teacher Match
			.navbar-item
				a.button.is-info.is-outlined(href="innovation-board.html")
					span Innovation Board
		.navbar-end
			#navbarLoginButton.navbar-item
				a.button.is-link(href="/login.html")
					span Login
			#navbarRegisterButton.navbar-item
				a.button.is-link(href="/register.html")
					span Register
			#navbarLogoutButton.navbar-item.is-actually-invisible
				a.button.is-link
					span Logout